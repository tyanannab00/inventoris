@model UAS_Inventoris.Models.Barang

<h1>Edit Barang</h1>

<form asp-action="Update" method="post">
    @Html.AntiForgeryToken()

    <input type="hidden" asp-for="IdBarang" />

    <div class="form-group">
        <label>Nama Barang</label>
        <input asp-for="NamaBarang" class="form-control" />
    </div>

    <div class="form-group">
        <label>Harga Barang</label>
        <input asp-for="HargaBarang" class="form-control" />
    </div>

    <div class="form-group">
        <label>Stok</label>
        <input asp-for="Stok" class="form-control" />
    </div>

    <div class="form-group">
        <label>Kategori ID</label>
        <input asp-for="KategoriId" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Simpan</button>
</form>
