@model List<UAS_Inventoris.Models.Barang>

<!-- Tambahkan referensi ke Bootstrap CSS -->
<link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">

<div class="mb-3">
    <a href="@Url.Action("Tambah", "Barang")" class="btn btn-success">Tambah Barang</a>
</div>


<h1>Daftar Barang</h1>

<!-- Gunakan kelas Bootstrap untuk membuat tabel lebih menarik -->
<table class="table table-striped">
    <thead class="thead-dark">
        <tr>
            <th>ID Barang</th>
            <th>Nama Barang</th>
            <th>Harga Barang</th>
            <th>Stok</th>
            <th>Kategori ID</th>
            <th>Actions</th> <!-- Kolom baru untuk menampilkan tombol aksi -->
        </tr>
    </thead>
    <tbody>
        @foreach (var barang in Model)
        {
            <tr>
                <td>@barang.IdBarang</td>
                <td>@barang.NamaBarang</td>
                <td>@barang.HargaBarang</td>
                <td>@barang.Stok</td>
                <td>@barang.KategoriId</td>
                <td>
                    <!-- Tombol Edit -->
                    <a href="@Url.Action("Edit", "Barang", new { id = barang.IdBarang })" class="btn btn-primary btn-sm">Edit</a>
                    <!-- Tombol Delete -->
                    <a href="@Url.Action("Delete", "Barang", new { id = barang.IdBarang })" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
